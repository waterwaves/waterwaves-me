html(ng-app='myApp')
  head
    title(ng-bind='title') #{titleName}
    meta(name='fragment', content='!')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel='icon', type='image/png', href='/img/s.png')
    script(type='text/javascript', src='/lib/angular/angular.js')
    script(type='text/javascript', src='/lib/angular/angular-route.js')
    script(type='text/javascript', src='/lib/angular/angular-sanitize.js')
    script(type='text/javascript', src='/js/app.js')
    script(type='text/javascript', src='/js/controllers.js')
    script(type='text/javascript', src='/js/services.js')
    script(type='text/javascript', src='/js/directives.js')

    script(type='text/javascript', src='/js/controllers/home-ctrl.js')

    //if lt IE 9
        script(src='/lib/html5shiv.js')
    //CSS library
    link(rel='stylesheet', href='/css/style.css')
    include partials/google-analytics

  body
    //Header
    #header.navbar.navbar-fixed-top
      .navbar-inner
        .container#menu
          li.pull-left
            a(href='/blogs') Blogs
          li.pull-left
            a(href='/profile') Profile
          li.center
            a(href='/') S
          li.pull-right
            a(href='/message') Contact
          li.pull-right
            a(href='/about', target='_self') About
    //the Content
    div.hidden
      if links
        each name, link in links
          a(href='#{link}') #{name}

    //Background
    .front-bg
      .overlay
      .page-container(ng-view='ng-view')


    //Footer
    #footer.navbar.navbar-fixed-bottom(ng-class='{\'footer-show\': footerShow, \'footer-hide\': !footerShow}')
      p.text-center
        span &copy; #{copyrightYear} Shan He
        span.divider &bull; 
        a.fs1.icon-linkedin(data-icon!='&#xe005;', href='http://www.linkedin.com/in/shanhe/', rel='author')
          span.hidden LinkedIn
        a.fs1.icon-twitter(data-icon!='&#xe000;', href='http://twitter.com/waterwaves_me', rel='author')
          span.hidden Twitter
        a.fs1.icon-github(data-icon!='&#xe002;', href='http://github.com/waterwaves')
          span.hidden GitHub
        a.fs1.icon-mail(data-icon!='&#xe004;', href='mailto: sean.shanhe@gmail.com')
          span.hidden Email To Me